<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" />

    <!-- Commons -->
    <style name="AppTheme.Button" />

    <style name="AppTheme.ImageButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/margin_xsmall</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="AppTheme.Button.GreenStroke">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/button_green_stroke_height</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.OnBoarding" />

    <style name="AppTheme.OnBoarding.ProgressView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">6dp</item>
        <item name="android:background">@color/theme_green</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintWidth_default">percent</item>
        <item name="layout_constraintWidth_percent">.2</item>
    </style>

    <style name="AppTheme.OnBoarding.Text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
    </style>

    <style name="AppTheme.OnBoarding.Text.CreateProfile">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginBottom">@dimen/margin_xxsmall</item>
    </style>

    <style name="AppTheme.OnBoarding.Text.Field">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
        <item name="android:background">@color/transparent</item>
    </style>
</resources>